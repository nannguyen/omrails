<div class="container mt-3">
	<div class="row">
		<div class="col-md-4 mb-1">
			<div class="card">
				<div class="card-body">
					<% if user_signed_in? %>
					<h5 class="card-title"><%= current_user.name %></h5>
						<h6 class="card-subtitle mb-2 text-muted"><%= current_user.username %></h6>
						<p class="card-text">Edit your profile!</p>

						<% else %>
							<h5 class="card-title"><%= link_to "Log in now", signin_path %></h5>
						<p class="card-text">In order to view your profile you have to log in first.</p>

					<% end %>


					<a href="#" class="card-link">About us</a>
					<a href="#" class="card-link">Privacy</a>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<% if user_signed_in? %>
				<%= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary btn-lg mb-1" %>
			<% end %>
			<div class="card">
				<ul class="list-group list-group-flush">
					<% @tweets.each do |tweet| %>
					<li class="list-group-item">
						<p><strong><%= link_to tweet.user.username, tweet %></strong></p>
						<p><%= tweet.content %></p>
						<% if tweet.user == current_user %>
						<div>
						<%= link_to 'Edit', edit_tweet_path(tweet), class: "card-link" %>
						
						<%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
						</div>
						<% end %>
					</li>
					<% end %>
				</ul>
			</div>


		</div>
	</div>
	
</div>