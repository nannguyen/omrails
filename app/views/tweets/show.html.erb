<div class="container mt-3">
	<div class="row">
		<div class="offset-md-2 col-md-8 col-12">
			<div class="card bg-light">
				<% if @tweet.image.present? %>
					<img class="card-img-top" src="<%= @tweet.image %>" alt="Card image cap">
				<% else %>
					<div class="card-header"><%= link_to @tweet.user.username, user_path(@tweet.user.username) %></div>
				<% end %>
				<div class="card-body">
					<% !if @tweet.image.present? %>
					<div class="card-text"><%= link_to @tweet.user.username, user_path(@tweet.user.username) %></div>
					<% end %>
					<div class="card-text"><%= @tweet.content %></div>

					<div class="card-text text-muted" style="font-size: small">on <%= @tweet.created_at.strftime("%A %B %d, %Y") %>
					@ <%= @tweet.created_at.strftime("%H:%M %Z") %></div>

					<div class="card-text">
						<hr>
						<% if @tweet.user == current_user %>
						<%= link_to 'Edit', edit_tweet_path(@tweet), class: "card-link" %>
						<% end %>

						<%= link_to 'Back', tweets_path, class: "card-link" %>

					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>