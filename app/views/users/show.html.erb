<div class="container mt-3">
	<div class="row">
		<div class="col-12">
			<h1><%= @user.name %></h1>

			<p class="text-muted"><%= @user.username %></p>
			<p><%= @user.email %></p>

			<h2>All me tweets</h2>
			<% @tweets.each do |tweet| %>
				<div class="card mb-1">
					<div class="card-header"><%= link_to tweet.created_at, tweet_path(tweet) %></div>
					<div class="card-body">
						<div class="card-text"><%= tweet.content %></div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>