<!DOCTYPE html>
<html>
  <head>
    <title>Nan's Rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <div class="container">
        <%= link_to "Nan Rails", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Tweets", tweets_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link" %></li>

            <% if user_signed_in? %>
            
            <% if current_user.admin? %>
            <li class="nav-item pull-md-right">
              <%= link_to "Admin", admin_root_path, class: "nav-link" %>
            </li>
            <% end %>
            
            <li class="nav-item pull-md-right">
              <%= link_to "Log out", signout_path, method: :delete, class: "nav-link" %>
            </li>

            <% else %>
            <li class="nav-item pull-md-right">
              <%= link_to "Sign in", signin_path, method: :get, class: "nav-link" %>
            </li>

            <li class="nav-item pull-md-right">
              <%= link_to "Register", signup_path, method: :get, class: "btn btn-primary nav-link" %>
            </li>
            <% end %>
        </ul>
      </div>
    </nav>
    
    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2019 Nancy Nguyen. All Rights Reserved unless otherwise stated.</p>
        </center>
      </div>
    </footer>
  </body>
</html>
