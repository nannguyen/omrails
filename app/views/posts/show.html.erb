<div class="container">
	<div class="row mt-3">
		<div class="col-12">
			<h1><%= @post.title %></h1>

			<p class="post-meta">By <strong><%= @post.user.username %></strong> on <%= @post.created_at %></p>
			
			<% if @post.url %>
			<p class="post-content"><%= @post.url %></p>
			<% end %>
			<% if @post.content %>
			<p class="post-content"><%= @post.content %></p>
			<% end %>
		</div>

		<div class="col-12">
			<% if @post.user == current_user %>
			<%= link_to 'Edit', edit_post_path(@post) %> |
			<% end %>
			<%= link_to 'Back', posts_path %>
		</div>
	</div>
</div>


